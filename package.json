{
  "name": "auto-mapa-transferencia",
  "version": "0.0.1",
  "description": "Automações para o Mapa de Transferencia",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "clear && node dist/app.js",
    "dev": "npm run build && npm run start",
    "compile": "npx tsc && pkg . --out-path dist/bin"
  },
  "keywords": [],
  "author": "mgluizbrito",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/winston": "^2.4.4",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "dotenv": "^17.2.2",
    "googleapis": "^105.0.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1",
    "winston": "^3.17.0"
  },

  "bin": "dist/app.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/whatsapp-web.js/package.json",
      "node_modules/whatsapp-web.js/src/**/*",
      "logs/**/*",
      ".env",
      "servaccs-credentials.json",
      "node_modules/open/xdg-open",
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist/bin"
  }
}
